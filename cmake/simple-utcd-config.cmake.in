# simple-utcd CMake configuration file
# This file is generated by CMake and should not be edited manually

@PACKAGE_INIT@

# Include the targets file
include("${CMAKE_CURRENT_LIST_DIR}/simple-utcd-targets.cmake")

# Set package variables
set(simple-utcd_VERSION "@simple-utcd_VERSION@")
set(simple-utcd_VERSION_MAJOR "@simple-utcd_VERSION_MAJOR@")
set(simple-utcd_VERSION_MINOR "@simple-utcd_VERSION_MINOR@")
set(simple-utcd_VERSION_PATCH "@simple-utcd_VERSION_PATCH@")

# Check if all required components are available
check_required_components(simple-utcd)

# Export package variables
set(simple-utcd_FOUND TRUE)
set(simple-utcd_INCLUDE_DIRS "@CMAKE_INSTALL_PREFIX@/include")
set(simple-utcd_LIBRARY_DIRS "@CMAKE_INSTALL_PREFIX@/lib")
set(simple-utcd_BINARY_DIRS "@CMAKE_INSTALL_PREFIX@/bin")

# Set compile definitions
set(simple-utcd_COMPILE_DEFINITIONS "")
if(BUILD_SHARED_LIBS)
    list(APPEND simple-utcd_COMPILE_DEFINITIONS "SIMPLE_UTCD_SHARED")
endif()

# Set compile options
set(simple-utcd_COMPILE_OPTIONS "")
if(CMAKE_CXX_COMPILER_ID MATCHES "GNU|Clang")
    list(APPEND simple-utcd_COMPILE_OPTIONS "-Wall" "-Wextra" "-Wpedantic")
endif()

# Set link options
set(simple-utcd_LINK_OPTIONS "")
if(CMAKE_CXX_COMPILER_ID MATCHES "GNU|Clang")
    list(APPEND simple-utcd_LINK_OPTIONS "-Wl,--as-needed")
endif()

# Print package information
message(STATUS "simple-utcd @simple-utcd_VERSION@ found")
message(STATUS "  Include directories: ${simple-utcd_INCLUDE_DIRS}")
message(STATUS "  Library directories: ${simple-utcd_LIBRARY_DIRS}")
message(STATUS "  Binary directories: ${simple-utcd_BINARY_DIRS}")
