# Simple UTC Daemon Configuration
# This is a basic configuration suitable for development and testing

# Network Configuration
listen_address = 0.0.0.0
listen_port = 37
enable_ipv6 = true
max_connections = 100

# UTC Server Configuration
stratum = 2
sync_interval = 64
timeout = 1000

# Logging Configuration
log_file = /var/log/simple-utcd/simple-utcd.log
log_level = INFO
enable_console_logging = true
enable_syslog = false

# Security Configuration
enable_authentication = false
authentication_key =
denied_clients = []
allowed_clients = []

# Performance Configuration
worker_threads = 2
enable_statistics = true
stats_interval = 60

# Development Settings
debug_mode = false
verbose_logging = false
