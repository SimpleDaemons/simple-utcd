[Unit]
Description=Simple UTC Daemon Socket
Documentation=man:simple-utcd(8)
PartOf=simple-utcd.service

[Socket]
ListenDatagram=37
ListenStream=37
BindIPv6Only=both
SocketUser=utc
SocketGroup=utc
SocketMode=0644
Backlog=128
MaxConnections=1000
KeepAlive=true
KeepAliveTimeSec=300
KeepAliveIntervalSec=30
KeepAliveProbes=3
NoDelay=true
ReusePort=true
FreeBind=true
BindToDevice=

[Install]
WantedBy=sockets.target
